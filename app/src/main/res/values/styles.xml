<resources>

    <style name="NotiphyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorSecondary">@color/cyan</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/gray</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="popupMenuBackground">@color/black</item>
        <item name="android:colorBackground">@color/light_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="toolbarStyle">@style/NotiphyTheme.Toolbar</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="materialAlertDialogTheme">@style/NotiphyTheme.AlertDialog</item>
    </style>

    <style name="NotiphyTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="NotiphyTheme.SecondaryText" parent="NotiphyTheme">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NotiphyTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/light_black</item>
        <item name="buttonBarPositiveButtonStyle">@style/NotiphyTheme.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NotiphyTheme.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/NotiphyTheme.DialogButton</item>
    </style>

    <style name="NotiphyTheme.DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotiphyTheme.FirebaseUI" parent="FirebaseUI">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:colorBackground">@color/cyan</item>
        <item name="android:windowBackground">@color/light_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="toolbarStyle">@style/NotiphyTheme.Toolbar</item>
    </style>

</resources>
